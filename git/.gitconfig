[alias]
	a = add .
	ck = checkout
	b = branch -vv
	br = branch
	cm = commit
	cma = "!f() { git add . && git commit \"$@\"; }; f"
	cml = "!git commit -m \"$(cat $(git rev-parse --git-dir)/COMMIT_EDITMSG)\""
	st = status
	d = difftool
	l = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=human-local
	lt = log --graph --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=human-local
        lg = log --decorate --oneline --graph
	m = merge --no-ff
	ff = merge --ff-only
	; pull = pull --prune ; git config --global fetch.prune true. Check [fetch] sections bellow.
	; c = clone --recursive
	p = pull
	pr = pull --rebase
	; rp = checkout HEAD -- package-lock.json   
	prune-origin = remote prune origin
	branch-list-remote = for-each-ref --format='%(color:cyan)%(authordate:format:%m/%d/%Y %I:%M %p)    %(align:25,left)%(color:yellow)%(authorname)%(end) %(color:reset)%(refname:strip=3)' --sort=authordate refs/remotes

[diff]
	tool = vimdiff
	submodule = log

[difftool]
	prompt = false
	trustExitCode = true
	layout = BASE,MERGED + BASE,LOCAL + BASE,REMOTE

[core]
	pager = less -iXFRE
	filemode = false
	commentChar = "#"
	excludesfile = ~/.gitignore_global

[mergetool]
	trustExitCode = true
[rebase]
	abbreviateCommands = true
[pull]
	ff = only
	rebase = true
[init]
	defaultBranch = master
[submodule]
	recurse = true
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[interactive]
	fdiffFilter = delta --color-only
[push]
	followTags = true
	autoSetupRemote = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[fetch]
	prune = true
[include]
	; This file is in gitignore and it's dedicated to local overrides
	path = ~/.gitconfig_local
