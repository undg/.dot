[include]
  path = ~/.gituser
; @example for file .gituser
; [user]
;   name = "User Name"
;   email = "User.Name@gmail.com"
; [credential "https://github.com"]
;   username = githubUser 
; [credential "http://localhost:8080"]
;   username = localUser

[alias]
  ck = checkout
  br = branch
  cm = commit
  st = status
  d = difftool
  ; l = log --decorate --oneline --graph
  l = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=human-local
  m = merge --no-ff
  ff = merge --ff-only
  pull = pull --prune
  c = clone --recursive
  p = pull
  pr = pull --rebase
  rp = checkout HEAD -- package-lock.json   

[diff]
  tool = vimdiff
  submodule = log

[difftool]
  prompt = false
  trustExitCode = true

[core]
  pager = less -iXFRE
  filemode = false
  commentChar = "#"

[mergetool]
  trustExitCode = true
[rebase]
  abbreviateCommands = true
[pull]
  ff = only
[init]
  defaultBranch = master
[submodule]
  recurse = true
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[interactive]
  diffFilter = delta --color-only
