{
	"$schema": "https://opencode.ai/config.json",
	"model": "github-copilot/claude-sonnet-4.5",
	"provider": {
		"lmstudio": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "LM Studio (local)",
			"options": {
				"baseURL": "http://127.0.0.1:1234/v1"
			}
		}
	},
	"disabled_providers": [
		"deepseek",
		"xai"
	],
	"permission": {
		"doom_loop": "ask",
		"external_directory": "ask",
		"bash": {
			"git push": "ask",
			"gh": "ask"
		}
	},
	"keybinds": {
		"editor_open": "ctrl+e"
	}
}
