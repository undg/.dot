{
	"$schema": "https://opencode.ai/config.json",
	"autoupdate": true,
	"instructions": [
		"{env:HOME}/.config/opencode/INSTRUCTIONS.md"
	],
	"provider": {
		"lmstudio": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "LM Studio (local)",
			"options": {
				"baseURL": "http://127.0.0.1:1234/v1"
			}
		}
	},
	"disabled_providers": [
		"deepseek",
		"xai"
	],
	"keybinds": {
		"editor_open": "ctrl+e"
	},
	"mcp": {
		"chrome-devtools": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"chrome-devtools-mcp@latest",
				"--browser-url=http://127.0.0.1:9222",
				"--no-category-emulation"
			],
			"enabled": false
		}
	},
	"plugin": [
		"@mohak34/opencode-notifier@0.1.14"
	],
	"agent": {
		"write": {
			"description": "reviews, edits and drafts longer-form content in my voice.",
			"mode": "primary",
			"color": "#F5B638",
			"permission": {
				"bash": "deny"
			},
			"prompt": "Review, edit, and write prose. Command form. Follow Guardian style guide - British English, clear and direct. No marketing jargon - skip 'perfect for', 'empowers you to', 'modernization'. Short and direct - no text walls. Context first, solution after. 'We' when working together; 'you' when addressing reader. Paragraphs brief - 2-4 sentences. Explain reasons, not just facts. Link sources and docs when useful. Bullets over numbers unless sequence matters. Honest about trade-offs. Bold key points. Simplify complex ideas. Casual tone fine - clarity beats rigid rules."
		}
	},
	"permission": {
		"external_directory": {
			"~/Documents/Work/**": "allow",
			"~/Documents/Personal/**": "allow"
		},
		"bash": {
			"*": "ask",
			"rm": "ask",
			"mv": "ask",
			"sh": "ask",
			"curl": "ask",
			"wget": "ask",
			"gh": "ask",
			"gh pr list *": "allow",
			"gh pr view *": "allow",
			"gh search prs *": "allow",
			"rg *": "allow",
			"git *": "allow",
			"git commit *": "ask",
			"git push *": "deny",
			"git rebase *": "ask",
			"ag *": "allow",
			"find *": "allow",
			"head *": "allow",
			"tail *": "allow",
			"grep *": "allow",
			"cat *": "allow",
			"ls *": "allow",
			"exa *": "allow",
			"eza *": "allow",
			"wc *": "allow",
			"tree*": "allow",
			"npm run lint": "allow",
			"npm run type-check": "allow",
			"npm run lint -- --fix": "allow"
		},
		"webfetch": "allow",
		"doom_loop": "ask",
		"ls*": "allow",
		"gh": "ask",
		"gh pr list *": "allow",
		"gh pr view *": "allow",
		"gh repo view *": "allow",
		// chrome
		"chrome-devtools*": "ask",
		"chrome-devtools_list_pages": "allow",
		"chrome-devtools_list_console_messages": "allow",
		"chrome-devtools_take_snapshot": "allow",
		"chrome-devtools_click": "allow",
		"chrome-devtools_press_key": "allow",
		"chrome-devtools_list_network_requests": "allow",
		"chrome-devtools_wait_for": "allow"
	}
}
