#!/usr/bin/sh

phone_ip="192.168.1.231"
port="4747"
pid=$(pidof droidcam-cli)

echo "http://$phone_ip:$port"

if [ -z $pid ]; then
  notify-send "start listener for ğŸ“¸ droidcam-cli"
  droidcam-cli -v $phone_ip $port &>/dev/null # manual
  droidcam-cli -l $port &>/dev/null               # listener
else
  killall -9 droidcam-cli
  notify-send "kill ğŸ“¸ğŸ’€  droidcam-cli"
fi

