#!/bin/bash

BRANCH=$(git rev-parse --abbrev-ref HEAD)
REMOTE=$(git remote)
ARGUMENTS="push -u $REMOTE $BRANCH"

function askYesNo {
        QUESTION=$1
        DEFAULT=$2
        if [ "$DEFAULT" = true ]; then
                OPTIONS="[Y/n]"
                DEFAULT="y"
            else
                OPTIONS="[y/N]"
                DEFAULT="n"
        fi
        read -p "$QUESTION $OPTIONS " -n 1 -s -r INPUT
        INPUT=${INPUT:-${DEFAULT}}
        echo ${INPUT}
        if [[ "$INPUT" =~ ^[yY]$ ]]; then
            ANSWER=true
        else
            ANSWER=false
        fi
}

git br --remotes | grep $(git rev-parse --abbrev-ref HEAD)
echo "git $ARGUMENTS"
askYesNo "Continue?" true

if [ "$ANSWER" = true ]; then
        git $ARGUMENTS
    else
        echo 'Abort'
fi
