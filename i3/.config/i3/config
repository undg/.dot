# vim: filetype=config syn=sh
# This config file will use environmental variables such as $BROWSER and $TERMINAL.
# You can set these variables in ~/.profile or ~/.bash_profile if you have it as below:
#
# export BROWSER="firefox"
# export TERMINAL="st"


# #---i3 Settings---# #
focus_follows_mouse no


# #---Basic Definitions---# #
for_window [class="^.*"] border pixel 4

set $term --no-startup-id $TERMINAL
set $winKey Mod4
set $altKey Mod1
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager
set $hibernate sudo -A systemctl suspend

set $DP_left DisplayPort-1
set $DP_right DisplayPort-0
set $DP_top HDMI-A-0

# #---Starting External Scripts---# #
# Setting the background:
exec --no-startup-id picom --config /dev/null                             # Composite manager
exec --no-startup-id d1;sleep 1; d3; i3-msg restart                       # xrandr with 3 displays workaround
exec_always --no-startup-id feh --bg-scale ~/.config/i3/wallpaper/dog.jpg # wallpaper
exec --no-startup-id unclutter                                            # hide mouse after a brief period
exec --no-startup-id echocancel                                           # pulse mixer echo cancelation
exec --no-startup-id dunst                                                # notifications
# exec --no-startup-id barrier                                            # KVM software
exec --no-startup-id flameshot                                            # screenshots
exec --no-startup-id lxsession                                            # FE for polkit
exec --no-startup-id iriunwebcam                                          # android webcam
exec --no-startup-id spotify                                              # music
exec_always --no-startup-id i3-autolayout autolayout                       # https://github.com/chmln/i3-auto-layout

# Set ~/.xresources colors:
set_from_resource $darkblack    color0  #000000
set_from_resource $black        color8  #000000
set_from_resource $darkred      color1  #000000
set_from_resource $red          color9  #000000
set_from_resource $darkgreen    color2  #000000
set_from_resource $green        color10 #000000
set_from_resource $darkyellow   color3  #000000
set_from_resource $yellow       color11 #000000
set_from_resource $darkblue     color4  #000000
set_from_resource $blue         color12 #000000
set_from_resource $darkmagenta  color5  #000000
set_from_resource $magenta      color13 #000000
set_from_resource $darkcyan     color6  #000000
set_from_resource $cyan         color14 #000000
set_from_resource $darkwhite    color7  #000000
set_from_resource $white        color15 #000000
set $transparent                        #000000

#                       BORDER        BACKGROUND   TEXT      INDICATOR     CHILD_BORDER
client.focused          $red          $red         $white    $darkmagenta  $darkred
client.unfocused        $transparent  $darkblue    $white    $darkblue     $darkblack
client.focused_inactive $transparent  "#008A0B"    $white    $darkblue     $darkblack
client.urgent           $darkred      $darkred     $black    $darkred      $darkgreen
client.background       $black

bar {
    tray_output $DP_right
    separator_symbol "|"
    status_command i3blocks -c ~/.config/i3/i3blocks.cfg
    position top
    mode dock
    modifier None
    font pango:DejaVu Sans Mono, Icons 12

    colors {
        background $darkblack
        statusline $darkwhite
        separator $cyan
#                           BORDER      BACKGROUND  FONT
        focused_workspace   $red        $darkred    $white
        active_workspace    $darkgreen  $darkblack  $white
        inactive_workspace  $darkblack  $darkblack  $white
        urgent_workspace    $darkblack  $darkblack  $white
        }
}


set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5:media"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"

# switch to workspace
bindsym $winKey+1                   workspace $ws1
bindsym $winKey+2                   workspace $ws2
bindsym $winKey+3                   workspace $ws3
bindsym $winKey+4                   workspace $ws4
bindsym $winKey+5                   workspace $ws5
bindsym $winKey+6                   workspace $ws6
bindsym $winKey+7                   workspace $ws7
bindsym $winKey+8                   workspace $ws8
bindsym $winKey+9                   workspace $ws9
bindsym $winKey+0                   workspace $ws10


# move focused container to workspace
bindsym $winKey+Shift+1            move container to workspace $ws1
bindsym $winKey+Shift+2            move container to workspace $ws2
bindsym $winKey+Shift+3            move container to workspace $ws3
bindsym $winKey+Shift+4            move container to workspace $ws4
bindsym $winKey+Shift+5            move container to workspace $ws5
bindsym $winKey+Shift+6            move container to workspace $ws6
bindsym $winKey+Shift+7            move container to workspace $ws7
bindsym $winKey+Shift+8            move container to workspace $ws8
bindsym $winKey+Shift+9            move container to workspace $ws9
bindsym $winKey+Shift+0            move container to workspace $ws10


workspace 1 output             $DP_left
workspace 2 output             $DP_left
workspace 3 output             $DP_left

workspace 4 output             $DP_top
workspace 5 output             $DP_top
workspace 6 output             $DP_top

workspace 7 output             $DP_right
workspace 8 output             $DP_right
workspace 9 output             $DP_right

