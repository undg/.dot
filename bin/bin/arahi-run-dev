#!/bin/env sh

if [[ "$1" == "stop" ]]; then
	tmux send-keys -t 1 C-c
	tmux send-keys -t 2 C-c
	tmux send-keys -t 3 C-c
	tmux send-keys -t 4 C-c
else
	tmux send-keys -t 1 enter 'y dev' enter
	tmux send-keys -t 2 enter 'while inotifywait -e close_write src/**/*; do git-diff-files; done' enter
	tmux send-keys -t 3 enter 'y test -w -R min' enter
	tmux send-keys -t 4 enter 'y lint:tsc -w' enter
fi
