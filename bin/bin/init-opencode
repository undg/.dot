#!/bin/bash

# Check if opencode.json already exists
if [ -f "opencode.json" ]; then
  echo "opencode.json already exists in current directory"
  exit 1
fi

# Create new opencode.json with default content
cat > opencode.json << 'EOF'
{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "qwen/qwen3-coder-30b": {
          "name": "Qwen 3 Coder 30B (local)"
        }
      }
    }
  }
}
EOF

echo "Created opencode.json in current directory"