#!/bin/env sh

if [[ "$1" == "-x" ]] || [[ "$1" == "--stop" ]] ; then
	tmux send-keys -t 1 C-c
	tmux send-keys -t 2 C-c
	tmux send-keys -t 3 C-c
	tmux send-keys -t 4 C-c
else
	tmux send-keys -t 1 enter C-c 'y dev' enter
	tmux send-keys -t 2 enter C-c 'eslint-git-diff -w src' enter
	tmux send-keys -t 3 enter C-c 'y test -w -R min' enter
	tmux send-keys -t 4 enter C-c 'y lint:tsc -w' enter
fi
