#!/usr/bin/env bash

Black="\033[0;30m"
Red="\033[0;31m"
Green="\033[0;32m"
Orange="\033[0;33m"
Blue="\033[0;34m"
Purple="\033[0;35m"
Cyan="\033[0;36m"
LightGray="\033[0;37m"
DarkGray="\033[1;30m"
LightRed="\033[1;31m"
LightGreen="\033[1;32m"
Yellow="\033[1;33m"
LightBlue="\033[1;34m"
LightPurple="\033[1;35m"
LightCyan="\033[1;36m"
White="\033[1;37m"
NC="\033[0m"

# Keep slash at the end of the source to include only it's content.
# Other way folder itself will be copied to destination
# Standard rsync thing
rsync_src_desc() {
	# local DEBUG="--dry-run"
	local DEBUG=""

	local src=$1
	local dst=$2

	# split by ':'
	IFS=':' read -r -a src_arr <<<"$src"
	local src_host=${src_arr[0]}
	local src_path=${src_arr[1]}

	local src_ok=false
	local desc_ok=false

	# SOURCE
	local src_msg="${Green}$src${NC}"
	if test -d "$src" && test -x "$src"; then
		src_ok=true
	elif [[ $(ssh $src_host test -d $src_path && echo exists) ]]; then
		src_ok=true
	else
		src_ok=false
		src_msg="${Red}$src ${Orange}(src missing)${NC}"
	fi

	# DESTINATION
	mkdir -p "$dst"
	local dst_msg="${Purple}$dst${NC}"
	if test -d "$dst" && test -x "$dst"; then
		desc_ok=true
	else
		desc_ok=false
		dst_msg="${Red}$dst ${Orange}(dst missing)${NC}"
	fi

	# RSYNC
	if test "$src_ok" = true && test "$desc_ok" = true; then
		echo -e "\n${Purple}$dst${NC} <- ${Green}$src${NC}"
		rsync $DEBUG -vazr --progress "$src" "$dst"
	else
		echo -e "\n$dst_msg${NC} <- $src_msg${NC}"
	fi
}

# Ixi
rsync_src_desc "ixi:storage/dcim/Camera/" "/mnt/s2/RAW/Camera"
rsync_src_desc "ixi:storage/pictures/dontBackup/" "/mnt/s2/RAW/Camera"
rsync_src_desc "ixi:storage/shared/Android/media/com.whatsapp/WhatsApp/" "/mnt/s2/RAW/Whatsapp"
rsync_src_desc "ixi:storage/music/URecorder/" "/mnt/s2/RAW/URecorder"

# download to s0 {zoom-f2, Insta360, DJI}
rsync_src_desc "/run/media/undg/F2_SD/" "/mnt/s0/RAW/zoom-f2"
rsync_src_desc "/run/media/undg/insta360-x3/DCIM/Camera01/" "/mnt/s0/RAW/insta360-x3"
rsync_src_desc "/run/media/undg/DJI-pocket2/DCIM/100MEDIA/" "/mnt/s0/RAW/dji-pocket2"

# Save to s2 {zoom-f2, Insta360, DJI}
rsync_src_desc "/mnt/s0/RAW/zoom-f2/" "/mnt/s2/RAW/zoom-f2"
rsync_src_desc "/mnt/s0/RAW/insta360-x3/" "/mnt/s2/RAW/insta360-x3"
rsync_src_desc "/mnt/s0/RAW/dji-pocket2/" "/mnt/s2/RAW/dji-pocket2"

# Backup of backup
rsync_src_desc "/mnt/s1/backups/" "/mnt/s2/backups"
rsync_src_desc "/mnt/s2/backups/" "/mnt/s1/backups"

# AGAIN ⁉️
# Looks strange, but it have a sense, if you'll think about it 🤔
rsync_src_desc "/mnt/s1/backups/" "/mnt/s2/backups"
