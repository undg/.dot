#!/usr/bin/env bash
#
# chrome-dev - Launch dedicated Chrome instance for development
#
# This Chrome instance is separate from personal browsing and is used for:
# - OpenCode's Chrome DevTools MCP
# - nvim-DAP debugging
# - Development with persistent authentication
#
# Usage:
#   chrome-dev [URL]           - Launch Chrome with optional URL (default: http://localhost:5173)
#   chrome-dev --help          - Show this help
#   chrome-dev --reset         - Reset the dev profile (clears all data)
#   chrome-dev --status        - Check if dev Chrome is running
#

set -euo pipefail

# Configuration
CHROME_PROFILE="${CHROME_DEV_PROFILE:-$HOME/.chrome-dev-profile}"
DEBUG_PORT="${CHROME_DEBUG_PORT:-9222}"
DEFAULT_URL="${CHROME_DEV_URL:-http://localhost:5173}"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Functions
show_help() {
    cat << EOF
chrome-dev - Launch dedicated Chrome for development

Usage:
  chrome-dev [URL]           Launch Chrome (default: $DEFAULT_URL)
  chrome-dev --help          Show this help
  chrome-dev --reset         Reset dev profile (clears all data)
  chrome-dev --status        Check if dev Chrome is running

Environment variables:
  CHROME_DEV_PROFILE         Profile location (default: ~/.chrome-dev-profile)
  CHROME_DEBUG_PORT          Remote debugging port (default: 9222)
  CHROME_DEV_URL             Default URL (default: http://localhost:5173)

Examples:
  chrome-dev                 Open localhost:5173
  chrome-dev http://localhost:3000
  CHROME_DEBUG_PORT=9223 chrome-dev

EOF
}

check_status() {
    if pgrep -f "$CHROME_PROFILE" > /dev/null 2>&1; then
        echo -e "${GREEN}âœ“${NC} Dev Chrome is running"
        echo -e "${BLUE}ðŸ“${NC} Profile: $CHROME_PROFILE"
        echo -e "${BLUE}ðŸ”Œ${NC} Debug port: $DEBUG_PORT"
        
        # Try to get version info
        if command -v curl &> /dev/null; then
            if curl -s "http://127.0.0.1:$DEBUG_PORT/json/version" &> /dev/null; then
                echo -e "${GREEN}âœ“${NC} Remote debugging is accessible"
            fi
        fi
        return 0
    else
        echo -e "${YELLOW}â—‹${NC} Dev Chrome is not running"
        return 1
    fi
}

reset_profile() {
    if check_status &> /dev/null; then
        echo -e "${RED}âœ—${NC} Chrome is running. Please close it first."
        exit 1
    fi
    
    if [[ -d "$CHROME_PROFILE" ]]; then
        echo -e "${YELLOW}âš ${NC}  This will delete all data in the dev profile:"
        echo -e "   $CHROME_PROFILE"
        read -p "   Continue? [y/N] " -n 1 -r
        echo
        if [[ $REPLY =~ ^[Yy]$ ]]; then
            rm -rf "$CHROME_PROFILE"
            echo -e "${GREEN}âœ“${NC} Dev profile reset successfully"
        else
            echo -e "${BLUE}â—‹${NC} Cancelled"
        fi
    else
        echo -e "${BLUE}â—‹${NC} Dev profile doesn't exist yet"
    fi
}

find_chrome() {
    local chrome_path=""
    
    if [[ "$OSTYPE" == "darwin"* ]]; then
        # macOS
        chrome_path="/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
        if [[ ! -x "$chrome_path" ]]; then
            echo -e "${RED}âœ—${NC} Chrome not found at: $chrome_path" >&2
            exit 1
        fi
    elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
        # Linux - try multiple paths
        for path in /usr/bin/google-chrome /usr/bin/chromium /usr/bin/chromium-browser; do
            if [[ -x "$path" ]]; then
                chrome_path="$path"
                break
            fi
        done
        if [[ -z "$chrome_path" ]]; then
            echo -e "${RED}âœ—${NC} Chrome/Chromium not found" >&2
            echo -e "   Install with: sudo apt install google-chrome-stable" >&2
            exit 1
        fi
    else
        echo -e "${RED}âœ—${NC} Unsupported OS: $OSTYPE" >&2
        exit 1
    fi
    
    echo "$chrome_path"
}

launch_chrome() {
    local url="${1:-$DEFAULT_URL}"
    local chrome_path
    
    # Check if already running
    if pgrep -f "$CHROME_PROFILE" > /dev/null 2>&1; then
        echo -e "${YELLOW}âš ${NC}  Dev Chrome is already running"
        echo -e "   Profile: $CHROME_PROFILE"
        echo -e "   Use '${BLUE}chrome-dev --status${NC}' for details"
        exit 0
    fi
    
    chrome_path=$(find_chrome)
    
    echo -e "${BLUE}ðŸš€${NC} Launching Chrome for development..."
    echo -e "${BLUE}ðŸ“${NC} Profile: $CHROME_PROFILE"
    echo -e "${BLUE}ðŸ”Œ${NC} Debug port: $DEBUG_PORT"
    echo -e "${BLUE}ðŸŒ${NC} URL: $url"
    echo ""
    
    # Launch Chrome
    "$chrome_path" \
        --user-data-dir="$CHROME_PROFILE" \
        --remote-debugging-port="$DEBUG_PORT" \
        --no-first-run \
        --no-default-browser-check \
        "$url" &> /dev/null &
    
    # Wait a moment and check if it started
    sleep 1
    if pgrep -f "$CHROME_PROFILE" > /dev/null 2>&1; then
        echo -e "${GREEN}âœ“${NC} Chrome launched successfully!"
        echo ""
        echo -e "${BLUE}ðŸ’¡${NC} This is your dedicated dev Chrome:"
        echo -e "   â€¢ Authenticate once and stay logged in"
        echo -e "   â€¢ Used by OpenCode, nvim-DAP, and other dev tools"
        echo -e "   â€¢ Completely separate from personal browsing"
        echo ""
        echo -e "${BLUE}ðŸ’¡${NC} Check status: ${GREEN}chrome-dev --status${NC}"
        echo -e "${BLUE}ðŸ’¡${NC} Reset profile: ${GREEN}chrome-dev --reset${NC}"
    else
        echo -e "${RED}âœ—${NC} Failed to launch Chrome"
        exit 1
    fi
}

# Main
main() {
    case "${1:-}" in
        --help|-h)
            show_help
            ;;
        --status|-s)
            check_status
            ;;
        --reset)
            reset_profile
            ;;
        *)
            launch_chrome "$@"
            ;;
    esac
}

main "$@"
